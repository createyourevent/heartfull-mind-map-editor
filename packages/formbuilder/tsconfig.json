{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "amd",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": true,

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "paths": {
      "@core-js/*": ["packages/core-js/src/*"],
      "@mindplot/*": ["packages/mindplot/src/*"],
      "@formbuilder/*": ["packages/formbuilder/src/*"],
      "@editor/*": ["packages/editor/src/*"]
    },  
    "rootDirs": [
      "src",
    ]
  },
  "include": [
    "src/**/*", "storybook/src/stories", "libraries", "../formbuilder/model/ElementModel.ts",
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}